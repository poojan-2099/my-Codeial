<script src="https://kit.fontawesome.com/9f9910fa49.js" crossorigin="anonymous"></script>
<li id="comment-<%= comment._id %>">
    <p>
        <%= comment.content%>
        <% if (locals.user) { %>
            <% if(locals.user.id==comment.user.id || locals.user.id == post.user.id) {%>
                <small>
                    <a class="delete-comment-button" href="/comments/destroy/<%=comment._id%>"><i class="far fa-times-circle"></i></a>
                </small>
            <% } %>
        <% } %>
        
        <br>
        <%= comment.user.username%>
    </p>
</li>