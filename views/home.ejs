<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<link rel="stylesheet" href="/css/home.css">

<div id="home-container" class="d-flex ml-3">
        <section id="feed-posts">
                <h3>Posts</h3>
                <% if(locals.user){ %>
                <form action="/posts/create" class="post1" id="new-post-form" method="POST">
                        <textarea name="content" cols="50" rows="3" placeholder="Type here.." required></textarea><br>
                        <input type="submit" value="Post">
                </form>
                <% } %>
                <div id="posts-list-container">
                        <ul>
                                <% for(post of posts){ %>

                                        <%- include('_post') -%>

                                <% } %>
                        </ul>
                </div>
        </section>

        <section id="user-friends">
                <h4>Friends</h4>
                <% for(u of all_users) { %>
                <p>
                        <a href="/users/profile/<%= u.id %>"><%= u.username%></a>
                </p>
                <% } %>
        </section>
</div>
<script src="/js/home_posts.js"></script>
<script src="/js/home_comment.js"></script>